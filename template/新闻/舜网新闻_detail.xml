<?xml version="1.0" encoding="utf-8" ?>
<html>	                  
	 <!--舜网新闻 http://e.e23.cn/content/2014-06-13/2014061300006.html详细页-->
	<forurlReg><![CDATA[http://[\S]+e23.cn/[\S]+]]></forurlReg>
	<load_on_items>
	    <item name="siteName" mode="str">
   			<![CDATA[舜网新闻 ]]>
		</item>
		<item name="type" mode="str">
   			<![CDATA[2]]> <!-- 1 搜索列表  2 详情 -->
		</item>
		<item name="charset" mode="str">
   			<![CDATA[gbk]]>
		</item>
		<item name="url_charset" mode="str">
   			<![CDATA[utf-8]]>
		</item>
		<item name="statusCode" mode="str">
   			<![CDATA[200]]><!--下载返回码为 200 视为成功 -->
		</item>
		<item name="cycle_retry_times" mode="str">
   			<![CDATA[1]]><!-- 重试次数 -->
		</item>	
		<!--内容解析成功必须存在的几个 值 -->
		<item name="exist_keys" mode="str">
   			<![CDATA[Title|Content|pubDateTime]]>
		</item>
		<item name="next_url" mode="regular" type="tmp" ref="url"><!--引用  url匹配  -->
    	<![CDATA[^(.*?)\.htm]]>
		</item>
	</load_on_items>
	<!-- 临时集合  页面下载后获取-->
	<tmp_items>
		<item name="news_container" mode="xpath" type="tmp">
   			<![CDATA[//div[@class="news_container"]/@class]]>
		</item>
	</tmp_items>
	<!--内容块 -->
	<Contents>
		<!--标题 -->	
		<item name="Title" mode="xpath">
    		<![CDATA[//div[@class='news_container']/h1/text()]]>
		</item>
			
		<item name="tmp_Author" mode="xpath" type="tmp" >
    	     <![CDATA[]]>   	     
		</item> 
		<item name="Author" mode="regular" parent="tmp_Author">
    	     <![CDATA[]]>   	     
		</item>				
						
		<!--发布时间 datetimeformat时间格式 多个以 ， , | 或空格隔开 -->
		 <item name="tmp_pubDateTime" mode="xpath" type="tmp" >
    		<![CDATA[//div[@class='artInfo h12']/span[2]/text()]]>
		</item> 
	       <item name="pubDateTime" mode="regular"  dateformat="yyyy-MM-dd HH:mm"  parent="tmp_pubDateTime">
    	     <![CDATA[\d{4}-\d{2}-\d{2}\s+\d{2}:\d{2}]]>
		</item>  		
		
		<item name="From" mode="xpath"  >
    	     <![CDATA[//div[@class='artInfo h12']/span[3]/text()]]>   	     
		</item>		
     	<item name="tmp_ClickCount" mode="xpath" regex="," replacement="" trim="1" type="tmp" ><!--点击量 -->
    	<![CDATA[]]>
		</item>
		<item name="ClickCount" mode="regular" parent="tmp_ClickCount">
    	     <![CDATA[]]>   	     
		</item>
		<item name="ReplyCount" mode="xpath"><!--回复数 -->
    	<![CDATA[]]>
		</item>
		<item name="Summary" mode="xpath"><!-- 摘要 -->
		 <![CDATA[//div[@id='endSummary']/p/text()]]>
		</item>		
		<item name="Content" mode="xpath" ><!--内容 -->
    	<![CDATA[//div[@class='h16']/html()]]>
		</item>			
	</Contents>		
</html>