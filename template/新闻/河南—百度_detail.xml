<?xml version="1.0" encoding="utf-8" ?>
<html>
	<!-- 河南—百度http://www.henan100.com/news/2017/745482.shtml -->
	<forurlReg><![CDATA[http://www.henan100.com/[\S]+]]></forurlReg>
	<!-- 临时集合 页面下载前获取-->
	<load_on_items>
		<item name="siteName" mode="str">
   	 		<![CDATA[河南—百度]]>
		</item>
		<item name="type" mode="str">
   			<![CDATA[2]]> <!-- 1 搜索列表  2 详情 -->
		</item>
		<item name="charset" mode="str">
   			<![CDATA[utf-8]]>
		</item>
		<item name="url_charset" mode="str">
   			<![CDATA[utf-8]]>
		</item>
		<item name="statusCode" mode="str">
   			<![CDATA[200]]><!--下载返回码为 200 视为成功 -->
		</item>
		<item name="cycle_retry_times" mode="str">
   			<![CDATA[1]]><!-- 重试次数 -->
		</item>
		<!--内容解析成功必须存在的几个 值 -->
		<item name="exist_keys" mode="str">
   			<![CDATA[wrap]]>
		</item>
	</load_on_items>
	<!-- 临时集合  页面下载后获取-->
	<tmp_items>
		<!-- 能够获取到列表块 视为此模板匹配成功 -->
		<item name="wrap" mode="xpath" type="tmp">
   			<![CDATA[//div[@class='wrap']/@class]]>
		</item> 
	</tmp_items>
	<Contents>
		<!--标题 -->
		<item name="Title" mode="xpath">
    	<![CDATA[//div[@class='nc_left_02 margintop10']/h1/a/text()]]>
		</item>
		<item name="tmp_From" mode="xpath" type="tmp" >
    	     <![CDATA[//div[@class='source-info']/text()]]>   	     
		</item>
		<item name="From" mode="regular"  parent="tmp_From">
    	     <![CDATA[来源：(.*?)$]]>   	     
		</item>
		<!--发布时间 datetimeformat时间格式 多个以 ， , | 或空格隔开 -->
		<item name="tmp_pubDateTime" mode="xpath" type="tmp">
    	<![CDATA[//div[@class='source-info']/span/text()]]>
		</item>
		<item name="pubDateTime" mode="regular" dateformat="yyyy-MM-dd HH:mm:ss"
			parent="tmp_pubDateTime">
    	<![CDATA[发布时间：(.*?)$]]>
		</item>
		<item name="Content" mode="xpath" ><!--内容 -->
    	<![CDATA[//div[@id='contentWraper']/html()]]>
		</item>
	</Contents>	
	<page>
		<!--翻页 下一页规则 -->
		<!-- 第一种方式 --> 
		<item name="page" mode="regular" type="tmp">
   			<![CDATA[<a href="(\S+)">下一页]]> 
		</item>
	</page>
	<!-- 翻页 下一页内容 -->
	<Next_Contents>
		<item name="Content" mode="xpath"><!-- 内容 -->
    	<![CDATA[//div[@id='contentWraper']/html()]]>
		</item>
	</Next_Contents>
</html>