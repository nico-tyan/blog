<?xml version="1.0" encoding="utf-8" ?>
<html>	                  
	 <!--株洲新闻网  http://www.zznews.gov.cn/news/2018/1010/298901.shtml详细页-->
	<forurlReg><![CDATA[http://[\S]+.zznews.gov.cn[\S]+]]></forurlReg>
	<load_on_items>
	    <item name="siteName" mode="str">
   			<![CDATA[株洲新闻网]]>
		</item>
		<item name="type" mode="str">
   			<![CDATA[2]]> <!-- 1 搜索列表  2 详情 -->
		</item>
		<item name="charset" mode="str">
   			<![CDATA[UTF-8]]>
		</item>
		<item name="url_charset" mode="str">
   			<![CDATA[UTF-8]]>
		</item>
		<item name="statusCode" mode="str">
   			<![CDATA[200]]><!--下载返回码为 200 视为成功 -->
		</item>
		<item name="cycle_retry_times" mode="str">
   			<![CDATA[1]]><!-- 重试次数 -->
		</item>	
		<!--内容解析成功必须存在的几个 值 -->
		<item name="exist_keys" mode="str">
   			<![CDATA[class]]>
		</item>
		<item name="next_url" mode="regular" type="tmp" ref="url"><!--引用  url匹配  -->
    	    <![CDATA[^(.*?)\.htm]]>
		</item>
	</load_on_items>
	<!-- 临时集合  页面下载后获取-->
	<tmp_items>
		<item name="class" mode="regular" type="tmp">
   			<![CDATA[class]]>
		</item>
	</tmp_items>
	<!--内容块 -->
	<Contents>
		<!--标题 -->	
		<item name="Title" mode="xpath">
    		<![CDATA[//h1[@class='article-title']/text()]]>
		</item>
			
		<item name="pubDateTime" mode="xpath">
    	     <![CDATA[//span[@class="date"]/text()]]>   	     
		</item>				
						
	   <item name="Author1" mode="xpath" type="tmp">
    	     <![CDATA[//div[@class="editor"]/span/text()]]>   	     
	   </item>
	   <item name="Author" mode="regular" parent="Author1">
    	     <![CDATA[编辑：(.*?)$]]>   	     
	   </item>
		<item name="From" mode="xpath">
    	     <![CDATA[//span[@class="source"]/text()]]>   	     
		</item>
		
     	<item name="tmp_ClickCount" mode="xpath" regex="," replacement="" trim="1" type="tmp" ><!--点击量 -->
    		<![CDATA[]]>
		</item>
		<item name="ClickCount" mode="regular" parent="tmp_ClickCount">
    	     <![CDATA[]]>
		</item>
		
		<item name="ReplyCount" mode="xpath"><!--回复数 -->
    		<![CDATA[]]>
		</item>
		
		<item name="Summary" mode="xpath"><!-- 摘要 -->
			 <![CDATA[]]>
		</item>		
		
		<item name="Content" mode="xpath" ><!--内容 -->
    		<![CDATA[//div[@class="article-content fontSizeSmall BSHARE_POP"]/html()]]>
		</item>			
	</Contents>		
	<page>
		<!--翻页 下一页规则 -->
		<!-- 第一种方式 --> 
		<item name="page" mode="xpath" type="tmp">
   			<![CDATA[]]> 
		</item>
		<!-- 第二种方式 -->
		<item name="currentPage" mode="regular" type="tmp">
   			<![CDATA[]]>
		</item>
		<item name="countPage" mode="regular" type="tmp">
   			<![CDATA[]]>
		</item>
		<!-- append_page = 0 or 1   时 递增规则 0 或 1 开始 --> 
		<url_join ref="next_url" append_page="1"><![CDATA[_]]></url_join>
		<url_join ><![CDATA[]]></url_join>
	</page>
	<!-- 翻页 下一页内容 -->
	<Next_Contents>
		<item name="Content" mode="xpath"><!-- 内容 -->
    	<![CDATA[]]>
		</item>
	</Next_Contents>
</html>