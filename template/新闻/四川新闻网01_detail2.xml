<?xml version="1.0" encoding="utf-8" ?>
<html>
	<!-- 四川新闻网http://yb.newssc.org/system/20170727/002235636.htmll -->
	<forurlReg><![CDATA[http://zg.newssc.org[\S]+]]></forurlReg>
	<!-- 临时集合 页面下载前获取-->
	<load_on_items>
		<item name="siteName" mode="str">
   	 		<![CDATA[四川新闻网]]>
		</item>
		<item name="type" mode="str">
   			<![CDATA[2]]> <!-- 1 搜索列表  2 详情 -->
		</item>
		<item name="charset" mode="str">
   			<![CDATA[gbk]]>
		</item>
		<item name="url_charset" mode="str">
   			<![CDATA[gbk]]>
		</item>
		<item name="statusCode" mode="str">
   			<![CDATA[200]]><!--下载返回码为 200 视为成功 -->
		</item>
		<item name="cycle_retry_times" mode="str">
   			<![CDATA[1]]><!-- 重试次数 -->
		</item>
		<!--内容解析成功必须存在的几个 值 -->
		<item name="exist_keys" mode="str">
   			<![CDATA[main]]>
		</item>
	</load_on_items>
	<!-- 临时集合  页面下载后获取-->
	<tmp_items>
		<!-- 能够获取到列表块 视为此模板匹配成功 -->
		<item name="main" mode="xpath" type="tmp">
   			<![CDATA[//div[@align='center']/@align]]>
		</item> 
	</tmp_items>
	<Contents>
		<!--标题 -->
		<item name="Title" mode="xpath">
    		<![CDATA[//td[@class='new20']/p/text()]]>
		</item>
		
		<item name="tmp_Author" mode="xpath" type="tmp"><!--作者  -->
    		<![CDATA[//span[@id='editor_baidu']/text()]]>
		</item>
		<item name="Author" mode="regular"  parent="tmp_Author">
    	     <![CDATA[编辑：(.*?)$]]>   	     
		</item>
		
		<item name="Summary" mode="xpath"> <!--摘要 -->
		</item>
		<item name="tmp_From" mode="xpath" type="tmp" >
    	     <![CDATA[//span[@id='source_baidu']/a/text()]]>   	     
		</item>
		<item name="From" mode="regular"  parent="tmp_From">
    	     <![CDATA[^(.*?)$]]>   	     
		</item>
		<!--发布时间 datetimeformat时间格式 多个以 ， , | 或空格隔开 -->
		<item name="tmp_pubDateTime" mode="xpath" type="tmp">
    	<![CDATA[//span[@id='pubtime_baidu']/text()]]>
		</item>
		<item name="pubDateTime" mode="regular" dateformat="yyyy-MM-dd HH:mm" parent="tmp_pubDateTime">
    	<![CDATA[(\d+-\d+-\d+\s*\d+:\d+)]]>
		</item>
		<item name="ClickCount" mode="xpath" regex="," replacement=""><!--点击量 -->
    	<![CDATA[]]>
		</item>
		<item name="ReplyCount" mode="xpath"><!--回复数 -->
    	<![CDATA[]]>
		</item>
		<item name="Content" mode="xpath" ><!--内容 -->
    	<![CDATA[//td[@class='new14']/html()]]>
		</item>
	</Contents>
	<Append_Contents>
	</Append_Contents>
	
	<page>
		<!--翻页 下一页规则 -->
		<!-- 第一种方式 --> 
		<item name="page" mode="regular" type="tmp">
   			<![CDATA[<a href="(\S+)">下一页]]> 
		</item>
		
	</page>
	<!-- 翻页 下一页内容 -->
	<Next_Contents>
		<item name="Content" mode="xpath"><!-- 内容 -->
    	<![CDATA[//div[@class='conment-main']/html()]]>
		</item>
	</Next_Contents>
	
