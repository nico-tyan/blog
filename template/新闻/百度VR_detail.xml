<?xml version="1.0" encoding="utf-8" ?>
<html>
	<!-- 百度VRhttp://ivr.baidu.com/gamenews/s5a0ba508e24f.html -->
	<forurlReg><![CDATA[http://ivr.baidu.com/[\S]+]]></forurlReg>
	<!-- 临时集合 页面下载前获取-->
	<load_on_items>
		<item name="siteName" mode="str">
   	 		<![CDATA[百度VR]]>
		</item>
		<item name="type" mode="str">
   			<![CDATA[2]]> <!-- 1 搜索列表  2 详情 -->
		</item>
		<item name="charset" mode="str">
   			<![CDATA[utf-8]]>
		</item>
		<item name="url_charset" mode="str">
   			<![CDATA[utf-8]]>
		</item>
		<item name="statusCode" mode="str">
   			<![CDATA[200]]><!--下载返回码为 200 视为成功 -->
		</item>
		<item name="cycle_retry_times" mode="str">
   			<![CDATA[1]]><!-- 重试次数 -->
		</item>
		<!--内容解析成功必须存在的几个 值 -->
		<item name="exist_keys" mode="str">
   			<![CDATA[wrapper]]>
		</item>
	</load_on_items>
	<!-- 临时集合  页面下载后获取-->
	<tmp_items>
		<!-- 能够获取到列表块 视为此模板匹配成功 -->
		<item name="wrapper" mode="xpath" type="tmp">
   			<![CDATA[//div[@class='wrapper']]]>
		</item> 
	</tmp_items>
	<Contents>
		<!--标题 -->
		<item name="Title" mode="xpath">
    	<![CDATA[//h1[@class='arc-tit']/text()]]>
		</item>
		<item name="Summary" mode="xpath"> <!--摘要 -->
		<![CDATA[//div[@class='play-tit fl']/span/text()]]> 
		</item>
		<!--发布时间 datetimeformat时间格式 多个以 ， , | 或空格隔开 -->
		<item name="tmp_pubDateTime" mode="xpath" type="tmp">
    	<![CDATA[//span[@class='time']/text()]]>
		</item>
		<item name="pubDateTime" mode="regular" dateformat="yyyy-MM-dd"
			parent="tmp_pubDateTime">
    	<![CDATA[^(.*?)$]]>
		</item>
		<item name="Content" mode="xpath" ><!--内容 -->
    	<![CDATA[//div[@class='arc-body mt20 clearfix']/html()]]>
		</item>
	</Contents>
	<regex_filter ><![CDATA[<div class="audio-read">[\s\S]+?</div>]]></regex_filter>
	<!-- 
	<regex_filter ><![CDATA[<a[^>]*?>[\s\S]+?</a>]]></regex_filter> 如替换掉所有a标签
	<css_filter><![CDATA[a[href]]]></css_filter>//带有href属性的a元素 删除
	<css_filter><![CDATA[img[src$=.png]]]></css_filter>//扩展名为.png的图片   删除
	<css_filter><![CDATA[h3.r > a]]></css_filter>//在h3元素之后的a元素   删除 
	-->
</html>