<?xml version="1.0" encoding="utf-8" ?>
<html>
	<!-- 中国金融观察网http://www.chinaesm.com/jinrong/2017/0712/28709.html -->
	<forurlReg><![CDATA[http://www.chinaesm.com/[\S]+]]></forurlReg>
	<!-- 临时集合 页面下载前获取-->
	<load_on_items>
		<item name="siteName" mode="str">
   	 		<![CDATA[中国金融观察网]]>
		</item>
		<item name="type" mode="str">
   			<![CDATA[2]]> <!-- 1 搜索列表  2 详情 -->
		</item>
		<item name="charset" mode="str">
   			<![CDATA[utf-8]]>
		</item>
		<item name="url_charset" mode="str">
   			<![CDATA[utf-8]]>
		</item>
		<item name="statusCode" mode="str">
   			<![CDATA[200]]><!--下载返回码为 200 视为成功 -->
		</item>
		<item name="cycle_retry_times" mode="str">
   			<![CDATA[1]]><!-- 重试次数 -->
		</item>
		<!--内容解析成功必须存在的几个 值 -->
		<item name="exist_keys" mode="str">
   			<![CDATA[title_box]]>
		</item>
	</load_on_items>
	<!-- 临时集合  页面下载后获取-->
	<tmp_items>
		<!-- 能够获取到列表块 视为此模板匹配成功 -->
		<item name="title_box" mode="xpath" type="tmp">
   			<![CDATA[//div[@class='title_box']/@class]]>
		</item> 
	</tmp_items>
	<Contents>
		<!--标题 -->
		<item name="Title" mode="xpath">
    	<![CDATA[//h1[@class='h1']/span[@class='fl']/text()]]>
		</item>
		<item name="Author" mode="xpath"><!--作者  -->
    	<![CDATA[//ul[@class='left']/li[4]/span/text()]]>
		</item>
		<!--发布时间 datetimeformat时间格式 多个以 ， , | 或空格隔开 -->
		<item name="tmp_pubDateTime" mode="xpath" type="tmp">
    	<![CDATA[//ul[@class='left']/li[2]/span/text()]]>
		</item>
		<item name="pubDateTime" mode="regular" dateformat="yyyy-MM-dd HH:mm:ss"
			parent="tmp_pubDateTime">
    	<![CDATA[时间:(.*?)$]]>
		</item>
		<item name="Content" mode="xpath" ><!--内容 -->
    	<![CDATA[//div[@class='content']/html()]]>
		</item>
	</Contents>
</html>