<?xml version="1.0" encoding="UTF-8"?>
<html>
     <!--天山网   http://so.ts.cn/cse/search?q=%E4%B8%AD%E5%9B%BD&p=5&s=5723483883017896130&nsid= -->
     <forurlReg><![CDATA[http://so.ts.cn/cse/search?[\S]+]]></forurlReg>
     <!-- 临时集合 页面下载前获取-->
     <load_on_items>
          <item name="siteCode" mode="str"><![CDATA[N0000503]]></item>
          <item name="siteName" mode="str"><![CDATA[天山网]]></item>
          <item name="type" mode="str">
               <![CDATA[1]]>
               <!-- 1 搜索列表  2 详情 -->
          </item>
          <item name="siteUrl" mode="str">
               <![CDATA[http://so.ts.cn/cse/search?q={Keyword}&p={Page}&s=5723483883017896130&nsid=]]>
               <!--搜索链接 -->
          </item>
          <item name="charset" mode="str"><![CDATA[utf-8]]></item>
          <item name="url_charset" mode="str"><![CDATA[utf-8]]></item>
          <item name="get_next_url" mode="str">
               <![CDATA[1]]>
               <!--  get_next_url =1 为获取下一页， 其它为替换 -->
          </item>
          <item name="load_referer" mode="str" type="tmp">
               <!-- 检查是否需要referer -->
               <![CDATA[#]]>
          </item>
          <item name="statusCode" mode="str">
               <![CDATA[200]]>
               <!--下载返回码为 200 视为成功 -->
          </item>
          <item name="cycle_retry_times" mode="str">
               <![CDATA[1]]>
               <!-- 重试次数 -->
          </item>
          <!--内容解析成功必须存在的几个 值  -->
          <item name="exist_keys" mode="str">
               <![CDATA[wrap]]>
               <!-- 能够获取到列表块 视为此模板匹配成功 -->
          </item>
     </load_on_items>
     <!-- 临时集合  页面下载后获取-->
     <tmp_items>
          <!-- 能够获取到列表块 视为此模板匹配成功 -->
          <item name="wrap" mode="xpath" type="tmp"><![CDATA[//div[@id='wrap']/@id]]></item>
     </tmp_items>
     <list>
          <item name="list_items" mode="xpath" type="tmp">
               <!--相当于添加了一个父类 （标题url这些需要获取的共同路径）  下面的网站主题就可以写精简 -->
               <![CDATA[//div[@class='content']/div/]]>
          </item>
     </list>
     <items>
          <item name="Title" mode="xpath">
               <!-- 标题 -->
               <![CDATA[//h3[@class="c-title"]/a/allText()]]>
          </item>
          <item name="Url" mode="xpath" regex="&amp;highlight=[^&amp;]+" replacement="">
               <!-- url链接 -->
               <![CDATA[//h3[@class="c-title"]/a/@href]]>
          </item>
          <item name="Author" mode="xpath">
               <!-- 作者 -->
          </item>
          <item name="Section" mode="xpath">
               <!-- 区域吧 -->
          </item>
          <item name="pubDateTime" mode="regular" dateformat="yyyy-MM-dd"><![CDATA[\d+-\d+-\d+]]></item>
          <item name="pub_ClickCount" mode="xpath" type="tmp">
               <!--点击量 -->
          </item>
          <item name="ClickCount" mode="regular" parent="pub_ClickCount">
               <!-- 时间 -->
          </item>
          <item name="ReplyCount" mode="xpath">
               <!--回复量 -->
          </item>
     </items>
     <!-- 获取下一页地址 -->
     <page>
          <item name="page" mode="regular" type="tmp"><![CDATA[<a href="([\S]+)" class="pager-next-foot n">下一页]]></item>
     </page>
