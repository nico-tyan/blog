<?xml version="1.0" encoding="utf-8" ?>
<html>
	<!--广东第二师范学校http://web.gdei.edu.cn:8000/www/xueyuanxinwen/xxyw/1bk0s0f2liovn.xhtml-->
	<forurlReg><![CDATA[http://web.gdei.edu.cn:8000/[\S]+]]></forurlReg>
	<!-- 临时集合 页面下载前获取-->
	<load_on_items>
		<item name="siteName" mode="str">
   	 		<![CDATA[广东第二师范学校]]>
		</item>
		<item name="type" mode="str">
   			<![CDATA[2]]> <!-- 1 搜索列表  2 详情 -->
		</item>
		<item name="charset" mode="str">
   			<![CDATA[utf-8]]>
		</item>
		<item name="url_charset" mode="str">
   			<![CDATA[utf-8]]>
		</item>
		<item name="statusCode" mode="str">
   			<![CDATA[200]]><!--下载返回码为 200 视为成功 -->
		</item>
		<item name="cycle_retry_times" mode="str">
   			<![CDATA[1]]><!-- 重试次数 -->
		</item>
		<!--内容解析成功必须存在的几个 值 -->
		<item name="exist_keys" mode="str">
   			<![CDATA[contain]]>
		</item>
	</load_on_items>
	<!-- 临时集合  页面下载后获取-->
	<tmp_items>
		<!-- 能够获取到列表块 视为此模板匹配成功 -->
		<item name="contain" mode="xpath" type="tmp">
   			<![CDATA[//div[@class='contain bgw wrap']/@class]]>
		</item> 
	</tmp_items>
	<Contents>
		<!--标题 -->
		<item name="Title" mode="xpath">
    	<![CDATA[//div[@class='articleHead']/h1/text()]]>
		</item>
		<!--发布时间 datetimeformat时间格式 多个以 ， , | 或空格隔开 -->
		<item name="tmp_pubDateTime" mode="xpath" type="tmp">
    	<![CDATA[//div[@class='articleHead']/span/text()]]>
		</item>
		<item name="pubDateTime" mode="regular" dateformat="yyyy年MM月dd日"
			parent="tmp_pubDateTime">
    	<![CDATA[发布时间：(.*?)$]]>
		</item>
		<item name="Content" mode="xpath" ><!--内容 -->
    	<![CDATA[//div[@class='text']/html()]]>
		</item>
	</Contents>
</html>
