<?xml version="1.0" encoding="utf-8" ?>
<html>	                  
	 <!--汽车报价网http://www.jlonline.com/qiche/2017-07-19/2577746.html 详细页-->
	<forurlReg><![CDATA[http://www.jlonline.com[\S]+]]></forurlReg>
	<load_on_items>
	    <item name="siteName" mode="str">
   			<![CDATA[汽车报价网]]>
		</item>
		<item name="type" mode="str">
   			<![CDATA[2]]> <!-- 1 搜索列表  2 详情 -->
		</item>
		<item name="charset" mode="str">
   			<![CDATA[utf-8]]>
		</item>
		<item name="url_charset" mode="str">
   			<![CDATA[utf-8]]>
		</item>
		<item name="statusCode" mode="str">
   			<![CDATA[200]]><!--下载返回码为 200 视为成功 -->
		</item>
		<item name="cycle_retry_times" mode="str">
   			<![CDATA[1]]><!-- 重试次数 -->
		</item>	
		<!--内容解析成功必须存在的几个 值 -->
		<item name="exist_keys" mode="str">
   			<![CDATA[Title|Content|pubDateTime]]>
		</item>
		<item name="first_keys" mode="str">
   			<![CDATA[main]]>
		</item>
	</load_on_items>
	<!-- 临时集合  页面下载后获取-->
	<tmp_items>
		<item name="main" mode="xpath" type="tmp">
   			<![CDATA[//div[@class="main"]/@class]]>
		</item>
	</tmp_items>
	<!--内容块 -->
	<Contents>
		<!--标题 -->	
		<item name="Title" mode="xpath">
    		<![CDATA[//div[@class='news_t1 shadow']/h1/text()]]>
		</item>
			
		<item name="tmp_Author" mode="xpath" type="tmp" >
    	     <![CDATA[//span[@class='bianji']/text()]]>   	     
		</item> 
		<item name="Author" mode="regular" parent="tmp_Author">
    	     <![CDATA[编辑：(.*?)$]]>   	     
		</item>				
						
		<!--发布时间 datetimeformat时间格式 多个以 ， , | 或空格隔开 -->
		<item name="pubDateTime" mode="xpath" dateformat="yyyy-MM-dd HH:mm">
    	     <![CDATA[//span[@class='time']/text()]]>   	     
		</item>		
		<item name="pubFrom" mode="xpath">
    	     <![CDATA[//span[@class='from']/text()]]>   	     
		</item>
		<item name="From" mode="regular" parent="pubFrom">
    	     <![CDATA[来源：(.*?)$]]>   	     
		</item>	
     	<item name="ClickCount" mode="xpath" ><!--点击量 -->
    	<![CDATA[//span[@id='clicknum']/text()]]>
		</item>
		<item name="ClickCount" mode="regular" parent="tmp_ClickCount">
    	     <![CDATA[]]>   	     
		</item>
		<item name="ReplyCount" mode="xpath"><!--回复数 -->
    	<![CDATA[]]>
		</item>
		<item name="Summary" mode="xpath"><!-- 摘要 -->
		 <![CDATA[]]>
		</item>		
		<item name="Content" mode="xpath" ><!--内容 -->
    	<![CDATA[//div[@class='content']/html()]]>
		</item>			
	</Contents>		
	<page>
		<!--翻页 下一页规则 -->
		<!-- 第一种方式 --> 
		<item name="page" mode="css" attr="href">
   			<![CDATA[div.page_box > ul > li:last-child > a]]> 
		</item>
		<!-- 第二种方式 -->
		<item name="currentPage" mode="regular" type="tmp">
   			<![CDATA[]]>
		</item>
		<item name="countPage" mode="regular" type="tmp">
   			<![CDATA[]]>
		</item>
		<!-- append_page = 0 or 1   时 递增规则 0 或 1 开始 --> 
		<url_join ref="next_url" append_page="1"><![CDATA[_]]></url_join>
		<url_join ><![CDATA[]]></url_join>
	</page>
	<!-- 翻页 下一页内容 -->
	<Next_Contents>
		<item name="Content" mode="xpath"><!-- 内容 -->
    	<![CDATA[//div[@class='content']/html()]]>
		</item>
	</Next_Contents>
</html>