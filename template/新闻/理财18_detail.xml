<?xml version="1.0" encoding="utf-8" ?>
<html>
	<!-- 理财18http://www.licai18.com/article/ArticleDetail.jsp?docId=2359732 -->
	<forurlReg><![CDATA[http://www.licai18.com/[\S]+]]></forurlReg>
	<!-- 临时集合 页面下载前获取-->
	<load_on_items>
		<item name="siteName" mode="str">
   	 		<![CDATA[理财18]]>
		</item>
		<item name="type" mode="str">
   			<![CDATA[2]]> <!-- 1 搜索列表  2 详情 -->
		</item>
		<item name="charset" mode="str">
   			<![CDATA[gbk]]>
		</item>
		<item name="url_charset" mode="str">
   			<![CDATA[gbk]]>
		</item>
		<item name="statusCode" mode="str">
   			<![CDATA[200]]><!--下载返回码为 200 视为成功 -->
		</item>
		<item name="cycle_retry_times" mode="str">
   			<![CDATA[1]]><!-- 重试次数 -->
		</item>
		<!--内容解析成功必须存在的几个 值 -->
		<item name="exist_keys" mode="str">
   			<![CDATA[center]]>
		</item>
	</load_on_items>
	<!-- 临时集合  页面下载后获取-->
	<tmp_items>
		<!-- 能够获取到列表块 视为此模板匹配成功 -->
		<item name="center" mode="xpath" type="tmp">
   			<![CDATA[//td[@align='center']/@align]]>
		</item> 
	</tmp_items>
	<Contents>
		<!--标题 -->
		<item name="Title" mode="xpath">
    	<![CDATA[//td[@class='article-header']/text()]]>
		</item>
		<item name="Author" mode="regular">
    	     <![CDATA[<span class="article-subheader">作者</span> <a href=\S+?>(.*?)</a>]]>   	     
		</item>
		<item name="pubDateTime" mode="regular" dateformat="yyyy-MM-dd HH:mm">
    	<![CDATA[(\d+-\d+-\d+ \d+:\d+)]]>
		</item>
		<item name="Content" mode="xpath" ><!--内容 -->
    	<![CDATA[//td[@class='article-content']/html()]]>
		</item>
	</Contents>
	</html>