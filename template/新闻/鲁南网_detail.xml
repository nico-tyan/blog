<?xml version="1.0" encoding="utf-8" ?>
<html>
	<!-- 鲁南网http://www.lunannews.com/xinwen/toutiao/201711166655.html -->
	<forurlReg><![CDATA[http://www.lunannews.com/[\S]+]]></forurlReg>
	<!-- 临时集合 页面下载前获取-->
	<load_on_items>
		<item name="siteName" mode="str">
   	 		<![CDATA[鲁南网]]>
		</item>
		<item name="type" mode="str">
   			<![CDATA[2]]> <!-- 1 搜索列表  2 详情 -->
		</item>
		<item name="charset" mode="str">
   			<![CDATA[gbk]]>
		</item>
		<item name="url_charset" mode="str">
   			<![CDATA[gbk]]>
		</item>
		<item name="statusCode" mode="str">
   			<![CDATA[200]]><!--下载返回码为 200 视为成功 -->
		</item>
		<item name="cycle_retry_times" mode="str">
   			<![CDATA[1]]><!-- 重试次数 -->
		</item>
		<!--内容解析成功必须存在的几个 值 -->
		<item name="exist_keys" mode="str">
   			<![CDATA[pageleft]]>
		</item>
	</load_on_items>
	<!-- 临时集合  页面下载后获取-->
	<tmp_items>
		<!-- 能够获取到列表块 视为此模板匹配成功 -->
		<item name="pageleft" mode="xpath" type="tmp">
   			<![CDATA[//div[@class='pageleft']/@class]]>
		</item> 
	</tmp_items>
	<Contents>
		<!--标题 -->
		<item name="Title" mode="xpath">
    	<![CDATA[//div[@class='newscontent']/h1/text()]]>
		</item>
		<item name="tmp_Author" mode="xpath" type="tmp"><!--作者  -->
    	<![CDATA[//div[@class='newscontent']/div[@class='d']/text()]]>
		</item>
		<item name="Author" mode="regular"  parent="tmp_Author">
    	     <![CDATA[作者：(.*?)\s]]>   	     
		</item>
		<item name="tmp_From" mode="xpath" type="tmp" >
    	     <![CDATA[//div[@class='newscontent']/div[@class='d']/text()]]>   	     
		</item>
		<item name="From" mode="regular"  parent="tmp_From">
    	     <![CDATA[来源：(.*?)\s]]>   	     
		</item>
		<!--发布时间 datetimeformat时间格式 多个以 ， , | 或空格隔开 -->
		<item name="tmp_pubDateTime" mode="xpath" type="tmp">
    	<![CDATA[//div[@class='newscontent']/div[@class='d']/text()]]>
		</item>
		<item name="pubDateTime" mode="regular" dateformat="yyyy-MM-dd HH:mm"
			parent="tmp_pubDateTime">
    	<![CDATA[发布时间：(.*?)$]]>
		</item>
		<item name="Content" mode="xpath" ><!--内容 -->
    	<![CDATA[//div[@class='newscontent']/div[@class='i']/html()]]>
		</item>
	</Contents>
</html>