<?xml version="1.0" encoding="utf-8" ?>
<html>
	<!-- 太平洋游戏网 http://gpc.pcgames.com.cn/691/6915392.html-->
	<forurlReg><![CDATA[http://[\S]+.pcgames.com.cn[\S]*]]></forurlReg>
	<!-- 临时集合 页面下载前获取-->
	<load_on_items>
		<item name="siteName" mode="str">
   	 		<![CDATA[太平洋游戏网]]>
		</item>
		<item name="type" mode="str">
   			<![CDATA[2]]> <!-- 1 搜索列表  2 详情 -->
		</item>
		<item name="charset" mode="str">
   			<![CDATA[gbk]]>
		</item>
		<item name="url_charset" mode="str">
   			<![CDATA[gbk]]>
		</item>
		<item name="statusCode" mode="str">
   			<![CDATA[200]]><!--下载返回码为 200 视为成功 -->
		</item>
		<item name="cycle_retry_times" mode="str">
   			<![CDATA[1]]><!-- 重试次数 -->
		</item>
		<!--内容解析成功必须存在的几个 值 -->
		<item name="exist_keys" mode="str">
   			<![CDATA[main]]>
		</item>
	</load_on_items>
	<!-- 临时集合  页面下载后获取-->
	<tmp_items>
		<!-- 能够获取到列表块 视为此模板匹配成功 -->
		<item name="main" mode="xpath" type="tmp">
   			<![CDATA[//div[@class='main']/@class]]>
		</item> 
	</tmp_items>
	<Contents>
		<!--标题 -->
		<item name="Title" mode="xpath">
    	<![CDATA[//div[@class='article']/h1/text()]]>
		</item>
		<item name="tmp_Author" mode="xpath" type="tmp"><!--作者  -->
    	<![CDATA[//span[@class='article-info-author']/text()]]>
		</item>
		<item name="Author" mode="regular"  parent="tmp_Author">
    	     <![CDATA[作者：(.*?)$]]>   	     
		</item>
		<item name="tmp_From" mode="xpath" type="tmp" >
    	     <![CDATA[//span[@class='article-info-source']/text()]]>   	     
		</item>
		<item name="From" mode="regular"  parent="tmp_From">
    	     <![CDATA[来源：(.*?)$]]>   	     
		</item>
		<!--发布时间 datetimeformat时间格式 多个以 ， , | 或空格隔开 -->
		<item name="tmp_pubDateTime" mode="xpath" type="tmp">
    	<![CDATA[//span[@class='article-info-date']/text()]]>
		</item>
		<item name="pubDateTime" mode="regular" dateformat="yyyy-MM-dd HH:mm"
			parent="tmp_pubDateTime">
    	<![CDATA[^(.*?)$]]>
		</item>
		<item name="Content" mode="xpath" ><!--内容 -->
    	<![CDATA[//div[@class='article-content']/html()]]>
		</item>
	</Contents>
	<page>
		<!--翻页 下一页规则 -->
		<!-- 第一种方式 --> 
		<item name="page" mode="xpath" type="tmp">
   			<![CDATA[//a[@class='next']/@href]]> 
		</item>
	</page>
	<!-- 翻页 下一页内容 -->
	<Next_Contents>
		<item name="Content" mode="xpath"><!-- 内容 -->
    	<![CDATA[//div[@class='article-content']/html()]]>
		</item>
	</Next_Contents>
	<regex_filter ><![CDATA[<div class="artbottomlink">[\s\S]+?</div>]]></regex_filter>
</html>