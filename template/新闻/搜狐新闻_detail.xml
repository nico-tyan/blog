<?xml version="1.0" encoding="utf-8" ?>
<html>	                  
	 <!--搜狐新闻http://business.sohu.com/20130717/n381879811.shtml详细页-->
	<forurlReg><![CDATA[http://business.sohu.com/[\S]+]]></forurlReg>
	<load_on_items>
	    <item name="siteName" mode="str">
   			<![CDATA[搜狐新闻 ]]>
		</item>
		<item name="type" mode="str">
   			<![CDATA[2]]> <!-- 1 搜索列表  2 详情 -->
		</item>
		<item name="charset" mode="str">
   			<![CDATA[gb2312]]>
		</item>
		<item name="url_charset" mode="str">
   			<![CDATA[utf-8]]>
		</item>
		<item name="statusCode" mode="str">
   			<![CDATA[200]]><!--下载返回码为 200 视为成功 -->
		</item>
		<item name="cycle_retry_times" mode="str">
   			<![CDATA[1]]><!-- 重试次数 -->
		</item>	
		<!--内容解析成功必须存在的几个 值 -->
		<item name="exist_keys" mode="str">
   			<![CDATA[Title|Content|pubDateTime]]>
		</item>
		<item name="next_url" mode="regular" type="tmp" ref="url"><!--引用  url匹配  -->
    	<![CDATA[^(.*?)\.htm]]>
		</item>
	</load_on_items>
	<!-- 临时集合  页面下载后获取-->
	<tmp_items>
		<item name="content-box clear" mode="xpath" type="tmp">
   			<![CDATA[//div[@class="content-box clear"]/@class]]>
		</item>
	</tmp_items>
	<!--内容块 -->
	<Contents>
		<!--标题 -->	
		<item name="Title" mode="xpath">
    		<![CDATA[//div[@class='content-box clear']/h1/text()]]>
		</item>
			
		<item name="tmp_Author" mode="xpath" type="tmp" >
    	     <![CDATA[]]>   	     
		</item> 
		<item name="Author" mode="regular" parent="tmp_Author">
    	     <![CDATA[]]>   	     
		</item>				
						
		<!--发布时间 datetimeformat时间格式 多个以 ， , | 或空格隔开 -->
		 <item name="tmp_pubDateTime" mode="xpath" type="tmp" >
    		<![CDATA[//div[@class='time-source']/div[@class='time']/html()]]>
		</item> 
	       <item name="pubDateTime" mode="regular"  dateformat="yyyy年MM月dd日HH:mm"  parent="tmp_pubDateTime">
    	     <![CDATA[(.*?)$]]>
		</item>  			
		<item name="From" mode="xpath" >
    	     <![CDATA[//div[@class='media_span']/a/span/text()]]>   	     
		</item>
		
     	<item name="tmp_ClickCount" mode="xpath" regex="," replacement="" trim="1" type="tmp" ><!--点击量 -->
    	<![CDATA[]]>
		</item>
		<item name="ClickCount" mode="regular" parent="tmp_ClickCount">
    	     <![CDATA[]]>   	     
		</item>
		<item name="ReplyCount" mode="xpath"><!--回复数 -->
    	<![CDATA[]]>
		</item>
		<item name="Summary" mode="xpath"><!-- 摘要 -->
		 <![CDATA[]]>
		</item>		
		<item name="Content" mode="xpath" ><!--内容 -->
    	<![CDATA[//div[@id='contentText']/html()]]>
		</item>			
	</Contents>		
</html>