<?xml version="1.0" encoding="utf-8" ?>
<html>	                  
	 <!--应城文明网  http://wm.ycnet.gov.cn/Article_ShowNews.asp?id=1055详细页-->
	<forurlReg><![CDATA[http://wm.ycnet.gov.cn[\S]+]]></forurlReg>
	<load_on_items>
	    <item name="siteName" mode="str">
   			<![CDATA[应城文明网]]>
		</item>
		<item name="type" mode="str">
   			<![CDATA[2]]> <!-- 1 搜索列表  2 详情 -->
		</item>
		<item name="charset" mode="str">
   			<![CDATA[gb2312]]>
		</item>
		<item name="url_charset" mode="str">
   			<![CDATA[gb2312]]>
		</item>
		<item name="statusCode" mode="str">
   			<![CDATA[200]]><!--下载返回码为 200 视为成功 -->
		</item>
		<item name="cycle_retry_times" mode="str">
   			<![CDATA[1]]><!-- 重试次数 -->
		</item>	
		<!--内容解析成功必须存在的几个 值 -->
		<item name="exist_keys" mode="str">
   			<![CDATA[Title|Content|pubDateTime]]>
		</item>
		<item name="first_keys" mode="str">
   			<![CDATA[ina_news_main_left]]>
		</item>
	</load_on_items>
	<!-- 临时集合  页面下载后获取-->
	<tmp_items>
		<item name="ina_news_main_left" mode="xpath" type="tmp">
   			<![CDATA[//div[@class="main_right"]/@class]]>
		</item>
	</tmp_items>
	<!--内容块 -->
	<Contents>
		<!--标题 -->	
		<item name="Title" mode="xpath">
    		<![CDATA[//div[@class='article_title']/text()]]>
		</item>
			
		<item name="Author1" mode="xpath" type="tmp">
    	     <![CDATA[//div[@class="article_from"]/text()]]>   	     
		</item>
		<item name="Author" mode="regular" parent="Author1">
    	     <![CDATA[录入者:(.*?)\|]]>   	     
		</item> 
								
		<!--发布时间 datetimeformat时间格式 多个以 ， , | 或空格隔开 -->
		<item name="DateTime" mode="xpath" type="tmp">
    	     <![CDATA[//div[@class="article_from"]/text()]]>   	     
		</item>	
		<item name="pubDateTime" mode="regular" parent="DateTime" dateformat="yyyy-MM-dd HH:mm:ss">
    	     <![CDATA[(\d+/\d+/\d+ \d+:\d+:\d+)]]>   	     
		</item>		
			
		<item name="From" mode="regular" parent="Author1">
    	     <![CDATA[来源:(.*?)\]]]>   	     
		</item>
		
     	<item name="tmp_ClickCount" mode="xpath" regex="," replacement="" trim="1" type="tmp" ><!--点击量 -->
    	<![CDATA[]]>
		</item>
		<item name="ClickCount" mode="regular" parent="Author1">
    	     <![CDATA[浏览:(\d+)\|]]>   	     
		</item>
		
		<item name="ReplyCount" mode="xpath"><!--回复数 -->
    	<![CDATA[]]>
		</item>
		
		<item name="Summary" mode="xpath"><!-- 摘要 -->
		 <![CDATA[]]>
		</item>		
		
		<item name="Content" mode="xpath" ><!--内容 -->
    	<![CDATA[//div[@class='article_content']/html()]]>
		</item>			
	</Contents>		
	<page>
		<!--翻页 下一页规则 -->
		<!-- 第一种方式 --> 
		<item name="page" mode="xpath" type="tmp">
   			<![CDATA[]]> 
		</item>
		<!-- 第二种方式 -->
		<item name="currentPage" mode="regular" type="tmp">
   			<![CDATA[]]>
		</item>
		<item name="countPage" mode="regular" type="tmp">
   			<![CDATA[]]>
		</item>
		<!-- append_page = 0 or 1   时 递增规则 0 或 1 开始 --> 
		<url_join ref="next_url" append_page="1"><![CDATA[_]]></url_join>
		<url_join ><![CDATA[]]></url_join>
	</page>
	<!-- 翻页 下一页内容 -->
	<Next_Contents>
		<item name="Content" mode="xpath"><!-- 内容 -->
    	<![CDATA[]]>
		</item>
	</Next_Contents>
</html>