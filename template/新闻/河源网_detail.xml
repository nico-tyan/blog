<?xml version="1.0" encoding="utf-8" ?>
<html>
	<!--河源网 http://www.heyuan.cn/xw/20180515/158370.htm-->
	<forurlReg><![CDATA[http://[\S]+.heyuan.cn[\S]+]]></forurlReg>
	<!-- 临时集合 页面下载前获取-->
	<load_on_items>
		<item name="siteName" mode="str">
   	 		<![CDATA[河源网]]>
		</item>
		<item name="type" mode="str">
   			<![CDATA[2]]> <!-- 1 搜索列表  2 详情 -->
		</item>
		<item name="charset" mode="str">
   			<![CDATA[gbk]]>
		</item>
		<item name="url_charset" mode="str">
   			<![CDATA[gbk]]>
		</item>
		<item name="statusCode" mode="str">
   			<![CDATA[200]]><!--下载返回码为 200 视为成功 -->
		</item>
		<item name="cycle_retry_times" mode="str">
   			<![CDATA[1]]><!-- 重试次数 -->
		</item>
		<!--内容解析成功必须存在的几个 值 -->
		<item name="exist_keys" mode="str">
   			<![CDATA[postwrap]]>
		</item>
	</load_on_items>
	<!-- 临时集合  页面下载后获取-->
	<tmp_items>
		<!-- 能够获取到列表块 视为此模板匹配成功 -->
		<item name="postwrap" mode="xpath" type="tmp">
   			<![CDATA[//div[@id='content']/@id]]>
		</item> 
	</tmp_items>
	<Contents>
		<!--标题 -->
		<item name="Title" mode="xpath">
    	<![CDATA[//div[@id='artName']/h1/text()]]>
		</item>
		<item name="From" mode="xpath">
    	     <![CDATA[//div[@id='infoCon']/span[2]/a/text()]]>   	     
		</item>
		
		<!--发布时间 datetimeformat时间格式 多个以 ， , | 或空格隔开 -->
		<item name="tmp_pubDateTime" mode="xpath" type="tmp">
    	<![CDATA[//div[@id='infoCon']/span[1]/text()]]>
		</item>
		<item name="pubDateTime" mode="regular" dateformat="yyyy-MM-dd HH:mm:ss"
			parent="tmp_pubDateTime">
    	<![CDATA[(\d+-\d+-\d+ \d+:\d+:\d+)]]>
		</item>
	    <item name="Author" mode="xpath">
	    <![CDATA[//div[@id='infoCon']/span[3]/text()]]>
	    </item>
		
		<item name="Content" mode="xpath"><!--内容 -->
    	<![CDATA[//div[@id='content']/html()]]>
		</item>
		
	</Contents>
</html>