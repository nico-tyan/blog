<?xml version="1.0" encoding="UTF-8"?>
<html>
     <!--央广网http://was.cnr.cn/was5/web/search?page=1&channelid=234439&searchword=88&keyword=88&orderby=LIFO&was_custom_expr=%2888%29&perpage=10&outlinepage=10&searchscope=&timescope=&timescopecolumn=&orderby=LIFO&andsen=&total=&orsen=&exclude= -->
     <forurlReg><![CDATA[http://was.cnr.cn/was5/web/search\?[\S]+]]></forurlReg>
     <!-- 临时集合 页面下载前获取-->
     <load_on_items>
          <item name="siteCode" mode="str"><![CDATA[N0000517]]></item>
          <item name="siteName" mode="str"><![CDATA[央广网]]></item>
          <item name="type" mode="str">
               <![CDATA[1]]>
               <!-- 1 搜索列表  2 详情 -->
          </item>
          <item name="siteUrl" mode="str">
               <![CDATA[http://was.cnr.cn/was5/web/search?page={Page}&channelid=234439&searchword={Keyword}&keyword={Keyword}&orderby=LIFO&was_custom_expr=%2888%29&perpage=10&outlinepage=10&searchscope=&timescope=&timescopecolumn=&orderby=LIFO&andsen=&total=&orsen=&exclude=]]>
               <!--搜索链接 -->
          </item>
          <item name="charset" mode="str"><![CDATA[utf-8]]></item>
          <item name="url_charset" mode="str"><![CDATA[utf-8]]></item>
          <item name="get_next_url" mode="str">
               <![CDATA[1]]>
               <!--  get_next_url =1 为获取下一页， 其它为替换 -->
          </item>
          <item name="load_referer" mode="str" type="tmp">
               <!-- 检查是否需要referer -->
               <![CDATA[#]]>
          </item>
          <item name="statusCode" mode="str">
               <![CDATA[200]]>
               <!--下载返回码为 200 视为成功 -->
          </item>
          <item name="cycle_retry_times" mode="str">
               <![CDATA[1]]>
               <!-- 重试次数 -->
          </item>
          <!--内容解析成功必须存在的几个 值  -->
          <item name="exist_keys" mode="str">
               <![CDATA[main]]>
               <!-- 能够获取到列表块 视为此模板匹配成功 -->
          </item>
     </load_on_items>
     <!-- 临时集合  页面下载后获取-->
     <tmp_items>
          <!-- 能够获取到列表块 视为此模板匹配成功 -->
          <item name="main" mode="xpath" type="tmp"><![CDATA[//div[@id='main']/@id]]></item>
     </tmp_items>
     <list>
          <item name="list_items" mode="xpath" type="tmp">
               <!--相当于添加了一个父类 （标题url这些需要获取的共同路径）  下面的网站主题就可以写精简 -->
               <![CDATA[//td[@class='searchresult']/ol/]]>
          </item>
     </list>
     <items>
          <item name="Title" mode="xpath">
               <!-- 标题 -->
               <![CDATA[li/div[1]/a/text()]]>
          </item>
          <item name="Url" mode="xpath" regex="&amp;highlight=[^&amp;]+" replacement="">
               <!-- url链接 -->
               <![CDATA[li/div[1]/a/@href]]>
          </item>
          <item name="Author" mode="xpath">
               <!-- 作者 -->
          </item>
          <item name="Section" mode="xpath">
               <!-- 区域吧 -->
          </item>
          <item name="tmp_pubDateTime" mode="xpath" type="tmp">
               <!-- 时间 -->
               <![CDATA[li/div[2]/text()]]>
          </item>
          <item name="pubDateTime" mode="regular" parent="tmp_pubDateTime" dateformat="yyyy.MM.dd HH:mm:ss"><![CDATA[(\d+.\d+.\d+\s*\d+:\d+:\d+)]]></item>
          <item name="ClickCount" mode="xpath">
               <!--点击量 -->
          </item>
          <item name="ReplyCount" mode="xpath">
               <!--回复量 -->
          </item>
     </items>
     <!-- 获取下一页地址 -->
     <page>
          <item name="page" mode="xpath" type="tmp"><![CDATA[//div[@id='outlinebar']/nobr/a[@class='next-page']/@href]]></item>
     </page>
