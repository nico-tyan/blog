<?xml version="1.0" encoding="UTF-8"?>
<html>
     <!-- 知更鸟http://zmingcx.com/page/1/?s=66&cat=all -->
     <forurlReg><![CDATA[http://zmingcx.com/[\S]*\?[\S]+]]></forurlReg>
     <!-- 临时集合 页面下载前获取-->
     <load_on_items>
          <item name="siteCode" mode="str"><![CDATA[N0000042]]></item>
          <item name="siteName" mode="str"><![CDATA[知更鸟]]></item>
          <item name="type" mode="str">
               <![CDATA[1]]>
               <!-- 1 搜索列表  2 详情 -->
          </item>
          <item name="siteUrl" mode="str">
               <![CDATA[http://zmingcx.com/page/{Page}/?s={Keyword}&cat=all]]>
               <!--搜索链接 -->
          </item>
          <item name="charset" mode="str"><![CDATA[utf-8]]></item>
          <item name="url_charset" mode="str"><![CDATA[utf-8]]></item>
          <item name="get_next_url" mode="str">
               <![CDATA[1]]>
               <!--  get_next_url =1 为获取下一页， 其它为替换 -->
          </item>
          <item name="load_referer" mode="str" type="tmp">
               <!-- 检查是否需要referer -->
               <![CDATA[#]]>
          </item>
          <item name="statusCode" mode="str">
               <![CDATA[200]]>
               <!--下载返回码为 200 视为成功 -->
          </item>
          <item name="cycle_retry_times" mode="str">
               <![CDATA[1]]>
               <!-- 重试次数 -->
          </item>
          <!--内容解析成功必须存在的几个 值  -->
          <item name="exist_keys" mode="str">
               <![CDATA[page]]>
               <!-- 能够获取到列表块 视为此模板匹配成功 -->
          </item>
     </load_on_items>
     <!-- 临时集合  页面下载后获取-->
     <tmp_items>
          <!-- 能够获取到列表块 视为此模板匹配成功 -->
          <item name="page" mode="xpath" type="tmp"><![CDATA[//div[@id='page']/@id]]></item>
     </tmp_items>
     <list>
          <item name="list_items" mode="regular_subset" type="tmp">
               <!--相当于添加了一个父类 （标题url这些需要获取的共同路径）  下面的网站主题就可以写精简 -->
               <![CDATA[<li class="search-inf">[\s\S]+?<li class="entry-title">[\S\s]+?</li>]]>
          </item>
     </list>
     <items>
          <item name="Title" mode="regular"><![CDATA[rel="bookmark">(.*?)</a>]]></item>
          <item name="Url" mode="regular" regex="&amp;highlight=[^&amp;]+" replacement=""><![CDATA[<a href="(\S+)" rel="bookmark"]]></item>
          <item name="pubDateTime" mode="regular" dateformat="MM月dd日"><![CDATA[(\d+月\d+日)]]></item>
     </items>
     <!-- 获取下一页地址 -->
     <page>
          <item name="page" mode="xpath" type="tmp"><![CDATA[//div[@class='nav-links']/a[@class='next page-numbers']/@href]]></item>
     </page>
